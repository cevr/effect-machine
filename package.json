{
  "name": "effect-machine",
  "version": "0.2.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/cevr/effect-machine.git"
  },
  "files": [
    "src",
    "tsconfig.json"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./cluster": "./src/cluster/index.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "gate": "concurrently -n type,lint,fmt,test -c blue,yellow,magenta,green \"bun run typecheck\" \"bun run lint:fix\" \"bun run fmt\" \"bun run test\"",
    "prepare": "lefthook install || true && effect-language-service patch",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "effect": "^3.19.15"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@effect/cluster": "^0.56.1",
    "@effect/experimental": "^0.58.0",
    "@effect/language-service": "^0.72.0",
    "@effect/rpc": "^0.73.0",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "effect-bun-test": "^0.1.0",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@effect/cluster": "^0.56.0",
    "@effect/rpc": "^0.73.0"
  },
  "peerDependenciesMeta": {
    "@effect/cluster": {
      "optional": true
    },
    "@effect/rpc": {
      "optional": true
    }
  }
}
